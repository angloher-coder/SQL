UPDATE BH_Tasks
SET BH_StateID='8F2DB7EC-6B9B-4d54-86BC-23140AE55808', BH_CompletionDate=GETUTCDATE() -- Set state to deleted and completion date
WHERE BH_Author='Authorguid' -- Filter for users that client wants deleted
AND BH_StateID IN ('D2DE4F09-128C-4317-A2FB-0B19FDAD8DA3','1A9E7C6A-1B90-446C-9259-6BD6D7C08925','2A64C393-FDBB-4F69-AEA0-22D28970AE52') -- only update tasks in drafts, pending or in progress


